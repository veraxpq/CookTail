<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Add">

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:text="CLEAR"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="78dp"
        android:text="POST"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/createRecipe"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="140dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="14dp"
        android:textSize="20sp"
        android:text="Create Recipe"/>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/createRecipeImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/ic_transparent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="14dp"/>

    <ImageView
        android:id="@+id/createRecipeBackground"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/ic_post"
        />
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="280dp">

        <EditText
            android:id="@+id/recipeNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_box"
            android:hint="Name Your Recipe"/>
        <EditText
            android:id="@+id/ingredientsET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_box"
            android:hint="Ingredients:"/>
        <TextView
            android:id="@+id/difficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Difficulty"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/difficultyBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingStart="12dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ic_star"/>
            <ImageButton
                android:id="@+id/difficultyBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingStart="12dp"
                android:background="@drawable/ic_star"/>
            <ImageButton
                android:id="@+id/difficultyBtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingStart="12dp"
                android:background="@drawable/ic_star"/>
            <ImageButton
                android:id="@+id/difficultyBtn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingStart="12dp"
                android:background="@drawable/ic_star"/>
            <ImageButton
                android:id="@+id/difficultyBtn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingStart="12dp"
                android:background="@drawable/ic_star"/>
        </LinearLayout>
        <TextView
            android:id="@+id/difficultyStar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_box"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/prepareTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="12dp"
                android:layout_marginLeft="20dp"
                android:text="Prepare Time: "
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/prepareTimeET"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:text="" />
            <TextView
                android:id="@+id/prepareTimeMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="min"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bakingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:layout_marginLeft="20dp"
                android:text="Baking Time:   "
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/bakingTimeET"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:text="" />
            <TextView
                android:id="@+id/bakingTimeMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="min"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/restingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingStart="12dp"
                android:layout_marginLeft="20dp"
                android:text="Resting Time:  "
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/restingTimeET"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:text="" />
            <TextView
                android:id="@+id/restingTimeMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="min"
                android:textSize="15sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_box"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="5"
            android:gravity="top"
            android:padding="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_box"
            android:hint="Details of the Recipe:"/>
    </LinearLayout>

</RelativeLayout>